@{
    ViewBag.Title = "Home Page";
}

<style>

/*body { background-color: #FFF; background-image: url('Content/images/back.jpg');

       overflow: hidden; background-size: cover; background-position: center center; background-repeat: no-repeat; }

    body,
    html {
        height: 100%;

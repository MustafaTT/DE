@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right", @style = "color:white;" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <ul class="nav navbar-nav navbar-right inlineList">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @style = "color:white;" })
                </li>
                <li></li>
                <li></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color:white;">Log off</a></li>
            </ul>
        </div>
    }
}
else
{
        <div class="container">
            <ul class="nav navbar-nav navbar-right inlineList">
                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @style = "color:white;" })</li>
                <li> <br /> <br />  </li>
                <li></li>
                <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "color:white;" })</li>
            </ul>
           </div>
                }
